@model List<EcommerceAdmin.Models.Entity.Ent_Category>
@{
    Layout = null;
    var i = 0;
}

<div class="header_bottom bottom_two sticky-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-12">
                <div class="header_bottom_container">
                    <div class="categories_menu">
                        <div class="categories_title">
                            <h2 class="categori_toggle">Browse categories</h2>
                        </div>
                        <div class="categories_menu_toggle">
                            <ul>
                                @foreach (var category in Model)
                                {
                                    i++;
                                    if (i < 9)
                                    {
                                        <li class="menu_item_children categorie_list">
                                            <a href="#">@category.Category_Name <i class="fa fa-angle-right"></i></a>
                                            <ul class="categories_mega_menu">
                                                <li class="menu_item_children">
                                                    <a href="#">Types of @category.Category_Name</a>
                                                    <ul class="categorie_sub_menu">
                                                        @foreach (var sub in category.SubCategoryList)
                                                        {
                                                           <li class="subCategory" id="@sub.Category_ID"><a   href="" >@sub.Category_Name</a></li>
                                                        }
                                                    </ul>
                                                </li>
                                            </ul>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="hidden">
                                            <a href="#">@category.Category_Name <i class="fa fa-angle-right"></i></a>
                                            <ul class="categories_mega_menu">
                                                <li class="menu_item_children">
                                                    <a href="#">Types of @category.Category_Name</a>
                                                    <ul class="categorie_sub_menu">
                                                        @foreach (var sub in category.SubCategoryList)
                                                        {
                                                           <li  class="subCategory" id="@sub.Category_ID"><a href="">@sub.Category_Name</a></li>
                                                        }
                                                    </ul>
                                                </li>
                                            </ul>
                                        </li>
                                    }
                                }

                                <li><a href="#" id="more-btn"><i class="fa fa-plus" aria-hidden="true"></i> More Categories</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="main_menu">
                        <nav>
                            <ul>
                                <li class="menu-item">
                                    <a href="/Home/Index">Home</a>

                                </li>
                                <li class="menu-item">
                                    <a href="#">Top Brands</a>

                                </li>

                                <li class="menu-item">
                                    <a href="about.html">About Us</a>
                                </li>
                                <li class="menu-item">
                                    <a href="contact.html"> Contact Us</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>