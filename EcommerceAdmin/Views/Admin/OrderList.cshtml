
@{
    ViewBag.Title = "OrderList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    List<EcommerceAdmin.Models.Entity.Ent_Order> OrderList = ViewBag.OrderList;
    var i= 0;
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        ORDER LIST

    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        @*<li><a href="#">Tables</a></li>*@
        <li class="active">Orders List</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <!-- /.box -->
            <div class="box">
                <div class="box-header">
                    @*<h3 class="box-title">Categories</h3>*@                   
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="dtCategory" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Sl No.</th>
                                <th>Order No.</th>
                                <th>Email ID</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th style="width:80px;">View</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in OrderList)
                            {
                                i++;
                            <tr id="@item.Order_ID">
                                <td>@i</td>
                                <td>@item.Order_ID</td>
                                <td>@item.entGuest.Guest_Email</td>
                                <td>AED @item.Order_Total</td>
                                @if (item.Is_Active == 1)
                                {
                                    <td>Received</td>
                                }
                                else if (item.Is_Active == 2)
                                {
                                    <td>Shipped</td>
                                }
                                else if (item.Is_Active == 3)
                                {
                                    <td>Delivered</td>
                                }
                                else if (item.Is_Active == 4)
                                {
                                    <td>Returned</td>
                                }
                                else if (item.Is_Active == 5)
                                {
                                    <td>Cancelled</td>
                                }
                                <td>
                                    <div class="tools">
                                        <a href="/Admin/Orders?OrderID=@item.Order_ID">  <i class="fa fa-edit"></i></a>
                                    </div>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<script>
    $(function () {
        $("#dtCategory").DataTable();
    });</script>

