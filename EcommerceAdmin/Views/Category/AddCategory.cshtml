@model EcommerceAdmin.Models.Entity.Ent_Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    List<EcommerceAdmin.Models.Entity.Ent_SubCategory> listSubCategory = ViewBag.listSubCategory;

}
<style>
    .inputValid {
        color: #dd4b39;
    }
</style>
<script src="../../Scripts/ajax/category.js"></script>
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        CATEGORY MASTER
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/Master/Category">Category List</a></li>
        <li class="active">Category Master</li>
    </ol>
</section>
<!-- Main content -->
<section class="content" style="min-height:520px">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add Category</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form role="form">
                    <input type="hidden" value="@Model.Category_ID" id="CategoryID" />
                    <div class="box-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Category Name</label>
                            <input type="text" class="form-control" id="CategoryName" value="@Model.Category_Name" placeholder="Enter Category Name">
                            <span class="help-block inputValid" id="validCategory"></span>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="button" class="btn btn-primary btnSubmit">Submit</button>
                        <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Category", "Master")'">
                            CANCEL
                        </button>
                    </div>

                </form>
            </div>
            <!-- /.box -->



        </div>
        <!--/.col (left) -->
        <!-- right column -->
        <div class="col-md-6">
            <!-- Horizontal Form -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Sub Category</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form class="form-horizontal">
                    <div class="box-body">
                        <div id="tabs-4" class="panel-collapse collapse in">
                            <div class="portlet-body">
                                <table id="tblSubCategory" class="datatable table table-hover table-striped table-bordered tc-table">
                                    <thead>
                                        <tr>
                                            <th>Sub Category Name</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tblSubCategoryBody">
                                        @foreach (var item in listSubCategory)
                                        {
                                            <tr class="tblRow" id="@item.Category_ID">
                                                <td> <input type="text" class="form-control subCategory" value="@item.Category_Name" placeholder="Enter SubCategory"></td>
                                                <td>
                                                    <button type="button" disabled class="btn btn-primary btnAddRow">ADD</button>
                                                    <button type="button" class="btn btn-primary btnDeleteRow">REMOVE</button>
                                                    <input type="hidden" id="subCategoryID" value="@item.Category_ID" />
                                                </td>
                                            </tr>
                                        }
                                        <tr class="tblRow">
                                            <td> <input type="text" class="form-control subCategory" placeholder="Enter SubCategory"></td>
                                            <td>
                                                <button type="button" class="btn btn-primary btnAddRow">ADD</button>
                                                <button type="button" class="btn btn-primary btnDeleteRow">REMOVE</button>
                                                <input type="hidden" id="subCategoryID" />
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <!-- ENDS DINNER TABLE  -->
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->

                </form>
            </div>
            <!-- /.box -->

        </div>
        <!--/.col (right) -->
    </div>

</section>
<!-- /.content -->
<!-- /.content -->
<script>
    $('li#masters').addClass('active');
</script>
