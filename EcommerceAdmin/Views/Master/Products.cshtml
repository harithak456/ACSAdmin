
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    List<EcommerceAdmin.Models.Entity.Ent_Product> listProduct = ViewBag.listProduct;
    var i = 0;
}
<script src="../../Scripts/ajax/product.js"></script>

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        PRODUCTS LIST

    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        @*<li><a href="#">Tables</a></li>*@
        <li class="active">Products List</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <!-- /.box -->
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Products</h3>
                    <a href="/Product/AddProduct" class="btn btn-info" style="float:right">+New</a>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="dtProduct" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Sl No.</th>
                                <th>Product Name</th>
                                <th>Category</th>
                                <th>Sub Category</th>
                                <th>Brand</th>
                                <th style="width:80px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in listProduct)
                            {
                                i++;
                                <tr id="@item.Product_ID">
                                    <td>@i</td>
                                    <td>@item.Product_Name</td>
                                    <td>@item.entCategory.Category_Name</td>
                                    <td>@item.entCategory</td>
                                    <td>@item.</td>
                                    <td>
                                        <div class="tools">
                                            <a href="/Product/AddProduct?ProductId=@item.Product_ID">  <i class="fa fa-edit"></i></a>
                                            <a href="" class="btnDeleteProduct">  <i class="fa fa-trash-o"></i></a>
                                            <input type="hidden" value="@item.Product_ID" />
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<script>
    $(function () {
        $("#dtProduct").DataTable();
    });</script>

