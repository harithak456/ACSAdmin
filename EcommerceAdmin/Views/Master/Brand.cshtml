
@{
    ViewBag.Title = "Brand";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    List<EcommerceAdmin.Models.Entity.Ent_Brand> listBrand = ViewBag.listBrand;
    var i = 0;
}
<style>
    .inputValid {
        color: #dd4b39;
    }
</style>
<script src="../../Scripts/ajax/brand.js"></script>
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        BRAND MASTER
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        @*<li><a href="#">Forms</a></li>*@
        <li class="active">Brand Master</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- SELECT2 EXAMPLE -->
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Brand Details</h3>

        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Enter Brand Name" id="BrandName">
                        <input type="hidden" id="BrandID">
                        <span class="help-block inputValid" id="validBrand"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">

                        <button type="button" class="btn btn-success pull-right" id="btnCancel">
                            CANCEL
                        </button>
                        <button type="button" class="btn btn-primary pull-right" id="btnSave" style="margin-right: 5px;">
                            SUBMIT
                        </button>
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div>
        @*<div class="box-footer">
                <button type="button" class="btn btn-success pull-right">
                    CANCEL
                </button>
                <button type="button" class="btn btn-primary pull-right" style="margin-right: 5px;">
                    SUBMIT
                </button>
            </div>*@
    </div>
    <!-- /.box -->
    <div class="row">
        <div class="col-xs-12">
            <!-- /.box -->
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Brand List</h3>
                    <div class="box-tools pull-right">


                        @*<a href="" class="btn btn-info btnAddNewBrand">Add New Brand</a>*@
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="dtBranch" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Sl No.</th>
                                <th>Brand Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="tbBrandBody">
                            @foreach (var item in listBrand)
                            {
                                i++;
                                <tr id="@item.Brand_ID">
                                    <td>@i</td>
                                    <td>@item.Brand_Name</td>
                                    <td>
                                        <div class="tools">
                                            <a class="" onclick="EditBrand(@item.Brand_ID,'@item.Brand_Name')">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a href="" class="btnDeleteBrand">  <i class="fa fa-trash-o"></i></a>
                                            <input type="hidden" value="@item.Brand_ID" />
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>

    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<script>
    function EditBrand(brandID, brandNAme) {

        $('#BrandID').val(brandID);
        $('#BrandName').val(brandNAme);
    }
</script>
<script>
    $(function () {
        $("#dtBranch").DataTable();
    });
</script>
<script>
    $('li#masters').addClass('active');
    $('li#BrandNav').addClass('active');
</script>


