
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    List<EcommerceAdmin.Models.Entity.Ent_User> listUsers = ViewBag.listUsers;
    var i = 0;
}
<script src="../../Scripts/ajax/user.js"></script>
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        USERS LIST

    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        @*<li><a href="#">Tables</a></li>*@
        <li class="active">User List</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <!-- /.box -->
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Users</h3>
                    <a href="/Master/AddUser" class="btn btn-info" style="float:right">+New</a>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="dtUser" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Sl No.</th>
                                <th>User Name</th>
                                <th>User Type</th>
                                <th style="width:80px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in listUsers)
                            {
                                i++;
                                <tr id="@item.User_ID">
                                    <td>@i</td>
                                    <td>@item.User_Name</td>
                                    <td>@item.User_Type</td>
                                    <td>
                                        <div class="tools">
                                            <a href="/Master/AddUser?UserID=@item.User_ID">  <i class="fa fa-edit"></i></a>
                                            <a href="" class="btnDeleteUser">  <i class="fa fa-trash-o"></i></a>
                                            <input type="hidden" value="@item.User_ID" />
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<script>
    $(function () {
        $("#dtUser").DataTable();
    });</script>

<script>
    $('li#masters').addClass('active');
</script>
