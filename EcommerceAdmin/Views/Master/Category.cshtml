
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    List<EcommerceAdmin.Models.Entity.Ent_Category> listCategory = ViewBag.listCategory;
    var i = 0;
}
<script src="../../Scripts/ajax/category.js"></script>
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        CATEGORY LIST

    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        @*<li><a href="#">Tables</a></li>*@
        <li class="active">Category List</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <!-- /.box -->
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Categories</h3>
                    <a href="/Category/AddCategory" class="btn btn-info" style="float:right">+New</a>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="dtCategory" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Sl No.</th>
                                <th>Category Name</th>
                                <th hidden>SubCategoryCount</th>
                                <th style="width:80px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in listCategory)
                            {
                                i++;
                                <tr id="@item.Category_ID">
                                    <td>@i</td>
                                    <td>@item.Category_Name</td>
                                    <td hidden>@item.SubCategoryCount</td>
                                    <td>
                                        <div class="tools">
                                            <a href="/Category/AddCategory?CategoryId=@item.Category_ID">  <i class="fa fa-edit"></i></a>
                                            <a href="" class="btnDeleteCategory">  <i class="fa fa-trash-o"></i></a>
                                            <input type="hidden" value="@item.Category_ID" />
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<script>
    $(function () {
        $("#dtCategory").DataTable();
    });</script>
<script>
    $('li#masters').addClass('active');
    $('li#CategoryNav').addClass('active');
</script>
