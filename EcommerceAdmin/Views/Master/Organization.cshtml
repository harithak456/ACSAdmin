@model EcommerceAdmin.Models.Entity.Ent_Organization
@{
    ViewBag.Title = "Organization";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .inputValid {
        color: #dd4b39;
    }
</style>
<script src="../../Scripts/ajax/organization.js"></script>
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        ORGANIZATION MASTER
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Organization Master</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- SELECT2 EXAMPLE -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Company Details</h3>

        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <input type="hidden" id="OrgID" value="@Model.Organization_ID">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Organization Name</label>
                        <input type="text" class="form-control" id="OrgName" value="@Model.Organization_Name" placeholder="Enter Organization Name">
                        <span class="help-block inputValid" id="validName"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Contact Person</label>
                        <input type="text" class="form-control" id="ContactPerson" value="@Model.Organization_ContactPerson" placeholder="Enter Contact Person">
                        <span class="help-block inputValid" id="validContactPerson"></span>
                    </div>
                    <!-- /.form-group -->
                    <!-- /.form-group -->
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" class="form-control" id="Phone" value="@Model.Organization_Phone" placeholder="Enter Phone">
                        <span class="help-block inputValid" id="validMobile"></span>
                    </div>
                    <!-- /.form-group -->
                    <div class="form-group">
                        <label>State</label>
                        <input type="text" class="form-control" id="State" value="@Model.Organization_State" placeholder="Enter State">
                    </div>
                    <!-- /.form-group -->
                </div>
                <!-- /.col -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" id="Email" value="@Model.organization_Email" placeholder="Enter Email">
                        <span class="help-block inputValid" id="validMail"></span>
                    </div>
                    <!-- /.form-group -->
                    <div class="form-group">
                        <label>Website</label>
                        <input type="text" class="form-control" id="Website" value="@Model.organization_Web" placeholder="Enter Website">
                        <span class="help-block inputValid" id="validWebsite"></span>
                    </div>
                    <!-- /.form-group -->
                    <div class="form-group">
                        <label>Country</label>
                        <input type="text" class="form-control" id="Country" value="@Model.Organization_Country" placeholder="Enter Country">
                    </div>
                    <!-- /.form-group -->
                </div>
                <!-- /.col -->
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Address</label>
                        <textarea class="form-control" id="Address" rows="3" placeholder="Enter Address">@Model.Organization_Address</textarea>
                        <span class="help-block inputValid" id="validAddress"></span>
                    </div>
                    <!-- /.form-group -->
                </div>
                <!-- /.col -->
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="button" class="btn btn-success pull-right" onclick="location.href='@Url.Action("Dashboard", "Admin")'">
                CANCEL
            </button>
            <button type="button" class="btn btn-primary pull-right" id="btnAddOrganization" style="margin-right: 5px;">
                SUBMIT
            </button>
        </div>
    </div>
    <!-- /.box -->


</section>

<script>
    $('li#masters').addClass('active');
</script>
